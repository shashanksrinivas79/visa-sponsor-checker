{
    "manifest_version": 3,
    "name": "Visa Sponsor Pro",
    "version": "1.0",
    "description": "Analyzes job descriptions for visa sponsorship keywords.",
    "permissions": ["storage"],
    "host_permissions": [
      "*://www.linkedin.com/*",
      "*://www.indeed.com/*",
      "*://jobright.ai/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://www.linkedin.com/jobs/*",
          "*://*.indeed.com/jobs*",
          "*://*.indeed.com/viewjob*",
          "*://jobright.ai/jobs/recommend*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }